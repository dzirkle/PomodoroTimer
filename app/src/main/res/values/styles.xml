<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PomodoroTimerText" parent="TextAppearance.AppCompat">
        <item name="android:textSize">64sp</item>
    </style>

    <style name="PomodoroWaitingTimerText" parent="PomodoroTimerText">
        <item name="android:textColor">@color/activeTimerColor</item>
    </style>

    <style name="PomodoroActiveTimerText" parent="PomodoroTimerText">
        <item name="android:textColor">@color/activeTimerColor</item>
    </style>

    <style name="PomodoroBreakTimerText" parent="PomodoroTimerText">
        <item name="android:textColor">@color/breakTimerColor</item>
    </style>

    <style name="PomodoroDisplayText" parent="TextAppearance.AppCompat.Display1">
        <item name="android:textSize">24sp</item>
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="PomodoroSubheadText" parent="TextAppearance.AppCompat.Subhead">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/lightText</item>
    </style>

    <style name="PomodoroButton" parent="Widget.AppCompat.Button">
        <item name="android:background">@color/pomodoroButtonBackground</item>
    </style>

    <style name="CardStyle" parent="CardView">
        <item name="cardBackgroundColor">@color/cardBackground</item>
    </style>
</resources>
